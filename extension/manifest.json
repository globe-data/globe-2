{
  "manifest_version": 3,
  "name": "Behavior Tracker",
  "version": "1.0",
  "description": "Tracks user behavior on any website.",
  "browser_specific_settings": {
    "gecko": {
      "id": "behavior-tracker@yourdomain.com"
    },
    "safari": {
      "strict_min_version": "14.0"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["analytics.js"],
    "matches": ["<all_urls>"]
  }]
}